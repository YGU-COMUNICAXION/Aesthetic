---
import "@styles/global.css";
import Header from "./Header.astro";
import Footer from "./Footer.astro";
import { ClientRouter } from "astro:transitions";
import BtnWhatsApp from "./BtnWhatsApp.astro";
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Aesthetic</title>
    <meta
      name="description"
      content="Aesthetic es una tienda de muebles y decoración que
    ofrece productos únicos y de alta calidad para transformar tu hogar."
    />
    <ClientRouter />
  </head>
  <body class="flex flex-col min-h-screen">
    <Header />
    <main class="mt-16 lg:mt-24 flex-1 bg-white">
      <slot />
    </main>
    <Footer />
    <BtnWhatsApp />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

<script is:inline>
  // Fallback básico para navegadores sin scroll-behavior
  if (!("scrollBehavior" in document.documentElement.style)) {
    document.querySelectorAll('a[href^="#"]').forEach((a) => {
      a.addEventListener("click", (e) => {
        const id = a.getAttribute("href")!;
        const el = document.querySelector(id);
        if (el) {
          e.preventDefault();
          el.scrollIntoView({ behavior: "smooth", block: "start" });
        }
      });
    });
  }
</script>
